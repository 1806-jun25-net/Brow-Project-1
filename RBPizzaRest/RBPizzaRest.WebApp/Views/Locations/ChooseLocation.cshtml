@model RBPizzaRest.WebApp.Models.MVLocation
@{
    ViewData["Title"] = "ChooseLocation";
}

<h2>ChooseLocation</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseLocation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                @Html.DropDownListFor(x=>x.SelectedLocation, new List<SelectListItem>
                {
                      new SelectListItem() {Text = "RESTON", Value="RESTON"},
                      new SelectListItem() {Text = "ALEXANDRIA", Value="ALEXANDRIA"},
                      new SelectListItem() {Text = "WASHINGTON DC", Value="WASHINGTON DC"},


                }, "Select Location")
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>